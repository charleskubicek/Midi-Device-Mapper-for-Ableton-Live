controller: controller_lc.nt
ableton_dir: /Applications/Ableton Live 12 Suite.app
# ableton_dir: /Applications/Ableton Live 12 Beta.app
modes:
    button: row-3:1
    type: shift
    on_color: green_full
    off_color: red_low
    mode_1:
        -
            type: device
            track: selected
            device: selected
            custom-parameter-mappings:
                -
                    device-name: OriginalSimpler
                    parameter-mappings:
                        S Start: row-1:1
                        S Length: row-1:2
                        Transpose: row-1:3
                        Trigger Mode: row-1:4
                        Ve Attack: row-1:5
                        Ve Decay: row-1:6
                        Ve Sustain: row-1:7
                        Volume: row-1:8
                        Filter Type: row-2:1
                        Filter Circuit - LP/HP: row-2:2
                        Filter Freq: row-2:3
                        Filter Res: row-2:4
                        Fade In: row-2:5
                        Fade Out: row-2:6
                        Vol < Vel: row-2:7
                        Detune: row-2:8
            mappings:
                encoders:
                    range: row-1:1-8,row-2:1-8
                    parameters: 1-16
#                encoders:
#                    -   condition: default
#                        range: row-1:1-8,row-2:1-8
#                        parameters: 1-16
#                    -
#                        condition: rack, first_8_or_less_mapped
#                        range: row-1:1-4,row-2:1-4
#                        parameters: 1-8
                on-off: row-3:4 toggle
                parameter-paging:
                    inc: row-4:1
                    dec: row-4:2
                    export-to-mode: mode_2
        -
            type: mixer
            track: selected
            mappings:
                mute: row-3:2
                solo: row-3:3
        -
            type: functions
            mappings:
                iterate_midi_pattern: row-3:5
                back8: row-3:6
                update_colors: row-3:7
        -
            type: device-nav
            mappings:
                left: row-5:1
                right: row-5:2
                first-last: row-3:8
        -
            type: track-nav
            mappings:
                left: row-4:1
                right: row-4:2
    mode_2:
        -
            type: mixer
            track: selected
            mappings:
                volume: row-1:8
                pan: row-2:8
                sends: row-1:5-6,row-2:5-6
                arm: row-3:3
        -
            type: transport
            mappings:
                record-session: row-3:5
                record-arrangement: row-3:6

#            type: device
#                parameter-page: row-4:1
#        -
#            type: device
#            track: master
#            device: Mono
#            ranges:
#                -
#                    range: row-3:2 toggle
#                    parameters: 0
        -
            type: functions
            mappings:
                record_midi_from_track_to_new_track: row-3:2 toggle
                selected_audio_to_simpler_in_new_track: row-3:4
                press_rack_random_button: row-3:7
                arrange: row-3:8
#                shift_clip_notes_left: row-4:1
#                shift_clip_notes_right: row-4:2
                clip_extend: row-5:2
                clip_delete_end: row-5:1