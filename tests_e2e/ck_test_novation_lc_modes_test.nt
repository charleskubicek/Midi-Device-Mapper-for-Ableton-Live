controller: controller_lc.nt
mode:
    name: main
    button: row_3:1
    type: shift
    on_color: green_full
    on_off: red_low
    mode_1:
        -
            type: device
            track: selected
            device: selected
            ranges:
                -
                    row: 1
                    range: 1-8
                    parameters: 1-8
        -
            type: device
            track: selected
            device: selected
            ranges:
                -
                    row: 2
                    range: 1-8
                    parameters: 9-19
        -
            type: mixer
            track: selected
            mappings:
                mute: row_3:2
                solo: row_3:3
    mode_2:
        -
            type: mixer
            track: selected
            mappings:
                volume: row_1:8
                pan: row_2:8
                sends: row_1:5-7
        -
            type: functions
            mappings:
                press_rack_random_button: row_3:8