controller: controller_lc.nt
modes:
    -
        name: main
        button: row-3:1
        type: shift
        next-mode: shifted
        mappings:
            -
                type: device
                track: selected
                device: selected
                ranges:
                    -
                        row: 1
                        range: 1-8
                        parameters: 1-8
                    -
                        row: 2
                        range: 1-8
                        parameters: 9-16
            -
                type: mixer
                track: selected
                mappings:
                    mute: row-3:2
                    solo: row-3:3
            -
                type: transport
                mappings:
                    play-stop: row-3:4
                    record-session: row-3:5
                    record-arrangement: row-3:6
                    loop: row-3:7
                    midi-arrange-overdub: row-3:8
    -
        name: shifted
        mappings:
            -
                type: mixer
                track: selected
                mappings:
                    volume: row-1:8
                    pan: row-2:8
                    sends: row-1:5-6,row-2:5-6
            -
                type: mixer
                track: master
                mappings:
                    volume: row-1:1
            -
                type: functions
                mappings:
                    press_rack_random_button: row-3:8